change-permissions() {
    local WHERE=$1
    local TYPE=$2
    local PERMISSIONS=$3

    find "$WHERE" -type $TYPE -exec chmod $PERMISSIONS {} \;
}

chmodf() {
    local WHERE=${1:-.}
    local PERMISSIONS=${2:-0644}

    change-permissions "$WHERE" f $PERMISSIONS
}

chmodd() {
    local WHERE=${1:-.}
    local PERMISSIONS=${2:-0755}

    change-permissions "$WHERE" d $PERMISSIONS
}


